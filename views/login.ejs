<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
      integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/auth.css" />
    <title><%=title%></title>
  </head>

  <body>
    <div
      class="bg-img overlay"
      style="
        background-image: url('https://images.pexels.com/photos/61143/pexels-photo-61143.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
      "
    >
      <div class="container">
        <div class="row">
          <div class="button-home">
            <a class="btn backToHomeButton" href="/" role="button">
              <i class="fa-solid fa-house"></i>
              Home
            </a>
          </div>

          <div class="form">
            <div class="choose-form">
              <h3 class="active btn-link"><a href="/auth">Sign In</a></h3>
              <h3 class="btn-link"><a href="/auth/register">Sign Up</a></h3>
            </div>
            <div class="login-form">
              <form method="post" class="box">
                <div class="mb-3">
                  <label class="label">Username</label>
                  <input
                    type="text"
                    class="form-control"
                    name="username"
                  />
                </div>
                <div class="mb-3">
                  <label class="label">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    name="password"
                  />
                </div>
                <div class="field is-grouped">
                  <div class="control">
                    <button class="btn btn-common-footer">Login</button>
                  </div>
                  <div class="control">
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                      Don't have an account?
                      <a class="link-button" href="/auth/register">Sign up</a>
                    </p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="alert-group">
          <% if(success_msg!='' ){%>
          <div id="success" class="alert alert-success alert-dismissible" role="alert">
            <%= success_msg %>
            <script>
              // Get the alert element
              var alertSC = document.getElementById('success');
            
              // Show the alert
              alertSC.style.display = 'block';
            
              // Hide the alert after 5 seconds
              setTimeout(function() {
                alertSC.style.display = 'none';
              }, 2000);
            </script>
          </div>
          <% } %> <% if(error_msg!='' ){%>
          <div id="warning" class="alert alert-warning alert-dismissible" role="alert">
            <%= error_msg %>
            <script>
              // Get the alert element
              var alertWN = document.getElementById('warning');
            
              // Show the alert
              alertWN.style.display = 'block';
            
              // Hide the alert after 5 seconds
              setTimeout(function() {
                alertWN.style.display = 'none';
              }, 2000);
            </script>
          </div>
          <% } %> <% if(error!='' ){%>
          <div id="danger" class="alert alert-danger alert-dismissible" role="alert">
            <%= error %>
            <script>
                // Get the alert element
                var alertER = document.getElementById('alert-danger');
              
                // Show the alert
                alertEl.style.display = 'block';
              
                // Hide the alert after 5 seconds
                setTimeout(function() {
                  alertER.style.display = 'none';
                }, 2000);
              </script>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
